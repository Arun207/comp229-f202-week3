<%- include ../partials/header.ejs%>

  <%- include ../partials/main_nav.ejs%>

  <div class="container">
    <div class="row">
        <div class="text-center"></div>
        <h1><%= title  %> </h1>

        <form class="form" method ="POST">
            <div class="form-group">
                <label for="nameTextField">Contact Name</label>
                <input type="text" class="form-control"
            id="nameTextField"
            placeholder="Enter the Contact "name
            name="name" 
            value="<%= book.name %> "
            required>
        </div>

        <div class="form-group">
            <label for="authorTextField">Contact number</label>
            <input type="text" class="form-control"
        id="authorTextField"
        placeholder="Enter the contact number"
        name="author" 
        value="<%= book.author %> "
        required>
    </div>

    <div class="form-group">
        <label for="publishedTextField">Email</label>
        <input type="text" class="form-control"
    id="publishedTextField"
    placeholder="Enter the email id"
    name="published"
    value="<%= book.published %> "
    required>
</div>

<button class="btn btn-primary" type="submit">
    <i class="fas fa-edit"></i>Submit</button>
    <a href="/book-list" class="btn btn-warning"><i class="fas fa-undo"></i>Cancel</a>
</button>
        </form>
    </div>
</div>
  
